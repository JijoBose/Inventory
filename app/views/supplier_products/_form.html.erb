
<%= simple_form_for(@supplier_product) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%#= f.association :user %>
    <%= f.input :user, :collection => User.where(role: User::ROLES[:supplier]).pluck(:id, :email), label_method: :second, value_method: :first, prompt: "Select a Supplier", class: "custom-select" %>
    <%= f.input :product, :collection => Product.all.pluck(:id, :name),
      label_method: :second, value_method: :first, prompt: "Select Product", class: "custom-select" %>
    <%= f.input :stock %>
    <%= f.input :price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
